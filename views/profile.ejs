<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Donations</title>
    <link rel="stylesheet" href="/css/profile.css">
</head>
<body>
    <div class="profile-container">
        <h2>Welcome, <%= user.username %> üëã</h2>
        <p><strong>Email:</strong> <%= user.email %></p>
        <p><strong>Role:</strong> <%= user.role %></p>

        <h3>Your Donations üì¶</h3>
        <% if (donations.length === 0) { %>
            <p class="no-donations">You haven't made any donations yet.</p>
        <% } else { %>
            <table class="donations-table">
                <thead>
                    <tr>
                        <th>Food Name</th>
                        <th>Quantity</th>
                        <th>Category</th>
                        <th>Status</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% donations.forEach(donation => { %>
                        <tr>
                            <td><%= donation.foodname %></td>
                            <td><%= donation.quantity %></td>
                            <td><%= donation.category %></td>
                            <td>
                                <% if (donation.status === "Pending") { %>
                                    <span class="pending">Pending ‚è≥</span>
                                <% } else if (donation.status === "Accepted") { %>
                                    <span class="accepted">Accepted ‚úÖ</span>
                                <% } else { %>
                                    <span class="rejected">Rejected ‚ùå</span>
                                <% } %>
                            </td>
                            <td><%= new Date().toLocaleDateString() %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>

        <!-- Add this after donations table -->
<div class="notifications-section">
    <h3>üîî Notifications</h3>
    <% if (notifications.length > 0) { %>
        <ul class="notification-list">
            <% notifications.forEach(notif => { %>
                <li class="notification-item">
                    <span class="message"><%= notif.message %></span>
                    <span class="date"><%= notif.createdAt.toLocaleString() %></span>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p class="no-notifications">No new notifications</p>
    <% } %>
</div>

        <div class="buttons">
            <a href="/donate" class="btn">‚ûï Donate More</a>
            <a href="/logout" class="btn logout">üö™ Logout</a>
        </div>
    </div>
</body>
</html>
